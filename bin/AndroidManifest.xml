        <activity
            android:name="hack.attwomen.allowancemanager.AddChild"
            android:label="@string/title_activity_add_child" >
        </activity>
        <activity
            android:name="hack.attwomen.allowancemanager.TaskManager"
            android:label="@string/title_activity_task_manager" >
        </activity>
        <activity
            android:name="hack.attwomen.allowancemanager.SetupPayActivity"
